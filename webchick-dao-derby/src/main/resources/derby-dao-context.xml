<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd   http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">

    <bean id="alarmDao" class="com.agrologic.app.dao.derby.impl.DerbyAlarmDaoImpl" parent="daoParent">
        <constructor-arg index="0" ref="jdbcTemplate"/>
    </bean>
    <bean id="controllerDao" class="com.agrologic.app.dao.derby.impl.DerbyControllerDaoImpl" parent="daoParent"/>
    <bean id="dataDao" class="com.agrologic.app.dao.derby.impl.DerbyDataDaoImpl" parent="daoParent"/>
    <bean id="distribDao" class="com.agrologic.app.dao.derby.impl.DerbyDistribDaoImpl" parent="daoParent"/>
    <bean id="feedDao" class="com.agrologic.app.dao.derby.impl.DerbyFeedDaoImpl" parent="daoParent"/>
    <bean id="feedTypeDao" class="com.agrologic.app.dao.derby.impl.DerbyFeedTypeDaoImpl" parent="daoParent"/>
    <bean id="flockDao" class="com.agrologic.app.dao.derby.impl.DerbyFlockDaoImpl" parent="daoParent"/>
    <bean id="fuelDao" class="com.agrologic.app.dao.derby.impl.DerbyFuelDaoImpl" parent="daoParent"/>
    <bean id="laborDao" class="com.agrologic.app.dao.derby.impl.DerbyLaborDaoImpl" parent="daoParent"/>
    <bean id="userDao" class="com.agrologic.app.dao.derby.impl.DerbyUserDaoImpl" parent="daoParent"/>
    <bean id="programDao" class="com.agrologic.app.dao.derby.impl.DerbyProgramDaoImpl" parent="daoParent"/>
    <bean id="screenDao" class="com.agrologic.app.dao.derby.impl.DerbyScreenDaoImpl" parent="daoParent"/>
    <bean id="tableDao" class="com.agrologic.app.dao.derby.impl.DerbyTableDaoImpl" parent="daoParent"/>
    <bean id="schemaDao" class="com.agrologic.app.dao.derby.impl.DerbySchemaDaoImpl" parent="daoParent"/>
    <bean id="relayDao" class="com.agrologic.app.dao.derby.impl.DerbyRelayDaoImpl" parent="daoParent"/>
    <bean id="systemStateDao" class="com.agrologic.app.dao.derby.impl.DerbySystemStateDaoImpl" parent="daoParent"/>
    <bean id="languageDao" class="com.agrologic.app.dao.derby.impl.DerbyLanguageDaoImpl" parent="daoParent"/>
    <bean id="spreadDao" class="com.agrologic.app.dao.derby.impl.DerbySpreadDaoImpl" parent="daoParent"/>
    <bean id="transactionDao" class="com.agrologic.app.dao.derby.impl.DerbyTransactionDaoImpl" parent="daoParent"/>
    <bean id="workerDao" class="com.agrologic.app.dao.derby.impl.DerbyWorkerDaoImpl" parent="daoParent"/>
    <bean id="cellinkDao" class="com.agrologic.app.dao.derby.impl.DerbyCellinkDaoImpl" parent="daoParent"/>
    <bean id="medicineDao" class="com.agrologic.app.dao.derby.impl.DerbyMedicineDaoImpl" parent="daoParent"/>
    <bean id="gasDao" class="com.agrologic.app.dao.derby.impl.DerbyGasDaoImpl" parent="daoParent"/>
    <bean id="versionDao" class="com.agrologic.app.dao.derby.impl.DerbyVersionDaoImpl" parent="daoParent"/>
    <bean id="daoFactory" class="com.agrologic.app.dao.derby.impl.DerbyDaoFactory" factory-method="instance"/>

    <aop:config>
        <aop:pointcut id="defaultTxPointcut" expression="within(com.agrologic.app.dao.AlarmDao+)"/>
        <aop:advisor advice-ref="txAdvice" pointcut-ref="defaultTxPointcut"/>
    </aop:config>

    <context:property-placeholder properties-ref="jdbcProps"/>
    <util:properties id="jdbcProps">
        <prop key="jdbc.driver">org.apache.derby.jdbc.EmbeddedDriver</prop>
        <prop key="jdbc.url">jdbc:derby:agrodb;create=true</prop>
        <prop key="jdbc.user"/>
        <prop key="jdbc.password"/>
    </util:properties>
</beans>